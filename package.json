{
  "name": "ryanheisler.com",
  "version": "0.0.0",
  "description": "Ryan Heisler's personal website",
  "scripts": {
    "api-dev": "nodemon ./dist/server.js",
    "api-watch": "tsc --watch",
    "build": "npm run clean && tsc && parcel build",
    "clean": "rm -rf ./dist",
    "frontend-dev": "parcel watch --no-cache --target frontend",
    "start": "node dist/server.js",
    "test": "vitest --run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lortimer/ryanheisler.com-vanilla.git"
  },
  "author": "Ryan Heisler (ryanheisler.com)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/lortimer/ryanheisler.com-vanilla/issues"
  },
  "homepage": "https://github.com/lortimer/ryanheisler.com-vanilla#readme",
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.12.0",
    "@parcel/transformer-webmanifest": "^2.12.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/user-event": "^14.5.2",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.4.2",
    "jsdom": "^24.1.1",
    "nodemon": "^3.1.4",
    "parcel": "^2.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "targets": {
    "frontend": {
      "source": [
        "./src/public/index.html"
      ],
      "distDir": "./dist/public",
      "optimize": false
    }
  }
}
